<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GymBuddyWeightTracker" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryVariant">@color/lime_700</item>
        <item name="colorOnPrimary">@color/grey_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_200</item>
        <item name="colorSecondaryVariant">@color/lime_200</item>
        <item name="colorOnSecondary">@color/lime_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="popupMenuBackground">@drawable/popup_menu</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/grey_500</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:textColor">@color/grey_200</item>
    </style>

    <style name="Theme.GymBuddyWeightTracker.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/grey_700</item>
    </style>

    <style name="DefaultAlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/grey_700</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/grey_500</item>
        <item name="colorControlActivated">@color/lime_500</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/ActionButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle" tools:targetApi="lollipop">@style/ActionButtonStyle</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowBackground">@drawable/alert_background</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/lime_500</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@drawable/btn_color</item>
        <item name="android:textColor">@drawable/edt_text_color</item>
        <item name="android:textColorHint">@color/grey_500</item>
    </style>

    <style name="eFABStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="strokeColor">@color/lime_500</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">#212121</item>
        <item name="android:textColor">@color/grey_200</item>
        <item name="rippleColor">@color/lime_500</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="strokeColor">@color/lime_500</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">#212121</item>
        <item name="android:textColor">@color/grey_200</item>
        <item name="rippleColor">@color/lime_500</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="textInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconTint">@color/grey_500</item>
        <item name="boxStrokeColor">@drawable/text_input_layout_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="helperTextTextColor">@color/grey_500</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2.5dp</item>
        <item name="hintTextColor">@color/grey_200</item>
        <item name="android:textColorHint">@color/grey_200</item>
    </style>

    <style name="shadowBlack">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="shadowBlackAlpha">
        <item name="android:shadowColor">#33000000</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>